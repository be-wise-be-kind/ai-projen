# Purpose: Flake8 configuration for Python style guide enforcement with plugins
# Scope: Code style checking, documentation standards, bug detection, and code simplification
# Overview: Flake8 configuration with comprehensive plugin suite including flake8-docstrings,
#     flake8-bugbear, flake8-comprehensions, and flake8-simplify for production-ready code quality.
# Dependencies: flake8, flake8-docstrings, flake8-bugbear, flake8-comprehensions, flake8-simplify
# Exports: Style guide enforcement configuration
# Related: Python code quality standards, PEP 8 compliance
# Implementation: INI-style flake8 configuration file

[flake8]
# Maximum line length (consistent with Ruff and Black)
max-line-length = 120

# Maximum McCabe complexity (enforces simple, maintainable code)
max-complexity = 10

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache,
    .ruff_cache,
    build,
    dist,
    *.egg-info

# Error codes to ignore
ignore =
    E203,  # Whitespace before ':' (conflicts with Black)
    E501,  # Line too long (handled by formatter)
    W503,  # Line break before binary operator (outdated PEP 8)
    W504,  # Line break after binary operator (conflicts with W503)
    D100,  # Missing docstring in public module (too strict for all modules)
    D104,  # Missing docstring in public package (too strict)
    D107,  # Missing docstring in __init__ (often not needed)

# Select error codes to check
select =
    E,     # pycodestyle errors
    W,     # pycodestyle warnings
    F,     # pyflakes
    C,     # mccabe complexity
    B,     # flake8-bugbear
    D,     # flake8-docstrings
    C4,    # flake8-comprehensions
    SIM,   # flake8-simplify

# Per-file ignores
per-file-ignores =
    __init__.py:F401,D104
    tests/*:D100,D101,D102,D103,S101
    test_*.py:D100,D101,D102,D103,S101

# Docstring conventions
docstring-convention = google

# Enable showing source code in error messages
show-source = True

# Enable statistics summary
statistics = True

# Count errors
count = True
